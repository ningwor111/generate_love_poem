def generate_love_poem():
    print("Ты - мое солнце, мое сияние,")
    print("С тобой мир превращается в сказание.")
    print("Твои глаза, глубокие и ясные,")
    print("Захватывают меня, словно чары.")

    print("Твоя улыбка, светлая и нежная,")
    print("Расцветает, как летний цветок.")
    print("Ты - моя радость, моя надежда,")
    print("С тобой я счастлив, как никогда.")

    print("Твоя ласка, легкая и нежная,")
    print("Поражает меня, словно ветерок.")
    print("Ты - моя муза, моя вдохновенье,")
    print("Ты - любовь моя, мой драгоценный сок.")

def main():
    generate_love_poem()

if __name__ == '__main__':
    main()
